{
  "manifest_version": 3,
  "name": "Marginalia",
  "version": "1.0.0",
  "description": "An extension for adding a bunch of post-its to your favorite websites.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
